<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.antoinelucas.tetris.MainActivity"
    android:background="@drawable/gradiant_background">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frameLayout"
        android:layout_width="220dp"
        android:layout_height="match_parent"

        android:columnWidth="10dp"
        android:numColumns="10"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/buttonMenu"
        android:layout_toEndOf="@+id/buttonMenu"
        android:background="@drawable/gradiant_background_game"/>


    <ImageButton
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:background="@drawable/circle_blue"
        android:id="@+id/buttonMenu"
        android:src="@mipmap/ic_menu_black_24dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/icon"/>
    <ImageButton
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:background="@drawable/circle_pink"
        android:layout_below="@+id/buttonMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/buttonMargin"
        android:id="@+id/button2"
        android:src="@mipmap/ic_cached_black_24dp"
        android:contentDescription="@string/icon"/>

    <ImageButton
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:background="@drawable/circle_orange"
        android:layout_marginTop="@dimen/buttonMargin"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_pause_black_24dp"
        android:contentDescription="@string/icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Level"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@color/colorBlack"
        android:textColor="@color/colorBlanc"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/frameLayout"
        android:layout_alignStart="@+id/frameLayout"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frameLayout"
        android:layout_alignStart="@+id/frameLayout"
        android:background="@color/colorBlack"
        android:text="@string/Score"
        android:textAlignment="center"
        android:textColor="@color/colorBlanc"
        android:textSize="20sp"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/frameLayout"
        android:textAlignment="center"
        android:text="@string/Next"
        android:textColor="@color/colorBlanc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
